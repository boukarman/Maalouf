<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="events">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		
		<class>tn.tunisietelecom.event.entities.Event</class>
		<class>tn.tunisietelecom.event.entities.Piece</class>
		<class>tn.tunisietelecom.event.entities.Site</class>
		<class>tn.tunisietelecom.event.entities.Privilege</class>
		<class>tn.tunisietelecom.event.entities.User</class>
		<class>tn.tunisietelecom.event.entities.Local</class>
		<class>tn.tunisietelecom.event.entities.Equipment</class>		
		<class>tn.tunisietelecom.event.entities.Holiday</class>
		<class>tn.tunisietelecom.event.entities.Interference</class>
		<class>tn.tunisietelecom.event.entities.Cause</class>
		<class>tn.tunisietelecom.event.entities.Role</class>
		<class>tn.tunisietelecom.event.entities.EventUser</class>
		<class>tn.tunisietelecom.event.entities.EventUserId</class>
		<class>tn.tunisietelecom.event.entities.UserRoleSubcontractorTypeId</class>
		<class>tn.tunisietelecom.event.entities.UserRoleSubcontractorType</class>
		<class>tn.tunisietelecom.event.entities.SubcontractorType</class>
		
		<properties>
			<!-- hibernate properties -->
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.connection.useUnicode" value="true" />
			<property name="hibernate.connection.characterEncoding"
				value="UTF-8" />
			<property name="hibernate.connection.charSet" value="UTF-8" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>
